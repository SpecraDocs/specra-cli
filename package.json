{
  "name": "create-specra",
  "version": "0.2.1",
  "description": "CLI tool to scaffold a new Specra documentation site with Next.js",
  "type": "module",
  "bin": {
    "create-specra": "./dist/index.js",
    "specra": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "documentation",
    "docs",
    "nextjs",
    "mdx",
    "specra",
    "create-app",
    "cli"
  ],
  "author": "dalmasonto, arthur-kamau",
  "repository": {
    "type": "git",
    "url": "https://github.com/dalmasonto/specra-cli"
  },
  "license": "SEE LICENSE IN LICENSE.MD",
  "dependencies": {
    "commander": "^12.1.0",
    "open": "^11.0.0",
    "ora": "^9.3.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "tar": "^7.5.7",
    "validate-npm-package-name": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2",
    "tsup": "^8.3.5",
    "typescript": "^5"
  }
}
